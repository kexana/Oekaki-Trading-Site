@model Drawing

<form asp-action="AlterInfo" asp-route-id="@Model.Id">
    <div class="form-group">
        <label>DrawingTitle</label>
        <input type="text" class="form-control" name="newTitle" placeholder="Alter title" value="@Model.Title">
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Delete" asp-route-id="@Model.Id">
        <button type="button" class="btn btn-danger">Delete entry</button>
    </a>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>