@model List<Drawing>
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                @foreach (var drawing in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <a asp-action="ViewPost" asp-route-id="@drawing.Id">
                                <img class="card-img-top" src="@Url.Content(drawing.ImageDirectory)" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <p class="card-text"> <strong style="font-size: 20px">@drawing.Title</strong></p>
                                <a class="nav-link text-dark"><label>Created by:  </label>@drawing.CreatorId</a>
                                <a class="nav-link text-dark"><label>Owned by:  </label>@drawing.OwnerId</a>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">price</span>
                                    </div>
                                    <input type="number" class="form-control" id="price" name="Price" value="@drawing.Price" disabled>
                                    <input type="button" class="form-control" value="Buy" style="background-color:lightgoldenrodyellow">
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-action="ViewPost" asp-route-id="@drawing.Id">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        </a>
                                        <a asp-action="Like" asp-route-id="@drawing.Id">
                                            <button type="button" class="btn btn-sm btn-outline-danger">Like</button>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" disabled>@drawing.TotalLikes</button>
                                    </div>
                                    <small class="text-muted">@drawing.CreationDate.ToString("d")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
